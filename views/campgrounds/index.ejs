<% include ../partials/header%>
<div class="container">
    <div class = "jumbotron">
        <h2>Welcome to Yelpcamp</h2>
        <p>View our hand picked campgrounds from all over the world!</p>
        <p><a href="/campgrounds/new" class="btn btn-primary btn-md">Add New CampGround</a></p>
    </div>

    
    <div class="row" id="row">
        <%campSites.forEach(function(camp){%>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="thumbnail">
                <img src="<%= camp.img%>"></img>
                <div class="caption text-center">
                    <h4><%= camp.name%></h4>
                    <a href="/campgrounds/<%= camp._id%>" class="btn btn-info btn-sm">More Info</a>
                </div>
            </div>
        </div>
        <%});%>
    </div>
</div>
<% include ../partials/footer%>
